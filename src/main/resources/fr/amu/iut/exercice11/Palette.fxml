<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.amu.iut.exercice11.PaletteController">
    
    <top>
        <Label fx:id="texteDuHaut" BorderPane.alignment="CENTER">
            <font>
                <Font name="Tahoma" size="20.0"/>
            </font>
        </Label>
    </top>
    
    <center>
        <Pane fx:id="panneau" prefHeight="200.0" prefWidth="400.0"/>
    </center>
    
    <bottom>
        <VBox alignment="CENTER_RIGHT">
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
                </padding>
                <Button fx:id="vert" text="Vert"/>
                <Button fx:id="rouge" text="Rouge"/>
                <Button fx:id="bleu" text="Bleu"/>
            </HBox>
            <Label fx:id="texteDuBas"/>
        </VBox>
    </bottom>
</BorderPane> 